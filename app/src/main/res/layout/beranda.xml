<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="354dp">


        <ImageView
            android:id="@+id/ivrs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickRS"
            app:srcCompat="@drawable/rs" />

        <ImageView
            android:id="@+id/ivmesjid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onclickmesjid"
            app:srcCompat="@drawable/mesjid" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

         <ImageView
             android:id="@+id/ivhotel"
             android:onClick="onclickhotel"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
              app:srcCompat="@drawable/hotel" />

    <ImageView
        android:id="@+id/ivuniv"
        android:onClick="onclickuniv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/univ" />
    </TableRow>
</LinearLayout>